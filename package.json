{
  "version": "1.0.1",
  "name": "http-status-helpers",
  "displayName": "HTTP Status Helper",
  "description": "Hover and insert HTTP status codes in VS Code.",
  "publisher": "esty",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/esteban-cz/http-status-helper"
  },
  "bugs": {
    "url": "https://github.com/esteban-cz/http-status-helper/issues",
    "email": "tomecka.stepan@gmail.com"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/images/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "httpStatus.insertCode",
        "title": "HTTP Status: Insert Code"
      },
      {
        "command": "httpStatus.openDocs",
        "title": "HTTP Status: Open Docs"
      }
    ],
    "configuration": {
      "title": "HTTP Status Helper",
      "properties": {
        "httpStatus.hover.enabledFiletypes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "*"
          ],
          "markdownDescription": "Controls which file types show HTTP status code hover info. Use language IDs (`javascript`, `typescript`), file extensions (`.js`, `ts`), or `*` for all file types."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "vscode:package": "vsce package",
    "update": "ncu -u && npm install",
    "update:check": "ncu",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out"
  },
  "devDependencies": {
    "@types/node": "25.3.0",
    "@types/vscode": "^1.109.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1",
    "npm-check-updates": "^19.4.1"
  },
  "dependencies": {}
}
